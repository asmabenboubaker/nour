{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
   
<div class="main-content app-content mt-0">
                <div class="side-app">
                 <div class="main-container container-fluid">

                        <!-- PAGE-HEADER -->
                        <div class="page-header">
                            <h1 class="page-title">Categories </h1>
                            </div>

                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nom</th>
                                                <th>actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for categorie in categories %}
                                            <tr>
                                                <td>{{ categorie.id }}</td>
                                                <td>{{ categorie.nom }}</td>
                                                <td>
                                                   <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn text-primary btn-sm"
                                                                                            data-bs-toggle="tooltip"
                                                                                            data-bs-original-title="Edit"><span
                                                                                                class="fe fe-edit fs-14"></span></a>



                                                                                       <a href="{{ path('app_categorie_delete',{'id': categorie.id}) }}" class="btn text-danger btn-sm"
                                                                                            data-bs-toggle="tooltip"
                                                                                            data-bs-original-title="Delete"><span
                                                                                                class="fe fe-trash-2 fs-14"></span></a> 


 
                                                                                                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">
                                                                                  <span class="glyphicon glyphicon-eye-open"></span>
                                                                                            </a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="3">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                    <a href="{{ path('app_categorie_new') }}">Create new</a>
                                </div>
                                </div>
                                </div>
{% endblock %}
